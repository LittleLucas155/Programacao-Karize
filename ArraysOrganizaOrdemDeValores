package workdoandwhile;

import java.util.Arrays;
import javax.swing.JOptionPane;

public class Arrays {
    
    public static void main(String[] args) {
        
        int[] num = new int[5];
        for (int i = 0; i < 5; i++) {
            num[i] = Integer.parseInt(JOptionPane.showInputDialog("Digite um numero: " + (i + 1)));
            
        }
        //Arrays ToString ele pega o valor que tem no vetor
        JOptionPane.showMessageDialog(null, Arrays.toString(num));
        
        //Arrays short ele organiza os valores
        Arrays.sort(num);
        
        JOptionPane.showMessageDialog(null, Arrays.toString(num));
    }
    
}
