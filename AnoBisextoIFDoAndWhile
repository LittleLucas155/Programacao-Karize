package workdoandwhile;

import javax.swing.JOptionPane;

public class AnoBisexto {

    public static void main(String[] args) {

        int ano;
        String sair = "";

        do {
            ano = Integer.parseInt(JOptionPane.showInputDialog("Informe um ano completo: "));

            if (ano % 4 == 0 && ano % 100 != 0) {
                JOptionPane.showMessageDialog(null, "Ano Bisexto");

            }

            sair = JOptionPane.showInputDialog("Deseja sair? S ou N: ");

        } while (sair.equals("N"));

    }
